<div class="container">
  <div class="d-flex justify-content-center">
    <!--ユーザー情報編集-->
    <%= form_with model:@user, local:true do |f| %>
      <div>プロフィール画像</div>
      <%= f.attachment_field :user_image %>
      
      <div>ユーザー名</div>
      <%= f.text_field :user_name %>
      
      <div>メールアドレス</div>
      <%= f.text_field :email %>
      
      <div>
        <%= f.submit "編集内容を保存", class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    
    <!--退会画面へのリンク-->
    <div>
      <%= link_to "退会する>>", unsubscribe_path %>
    </div>
  </div>
</div>