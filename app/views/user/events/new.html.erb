<div>
  <div>
    <h1>予定登録</h1>
    
    <div>
      <%= form_with model: @event, local: true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        
        <h4>詳細</h4>
        <%= f.text_field :body %>
        
        <div>
          <%= f.submit "登録" %>
        </div>
      <% end%>
    </div>
  </div>
</div>