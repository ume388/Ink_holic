<%= form_with model: ink, local:true do |f| %>
  <h4 class="ink_form_item">インク画像</h4>
  <%= f.attachment_field :ink_image %>

  <h4 class="ink_form_item">インク名</h4>
  <%= f.text_field :ink_name %>

  <h4 class="ink_form_item">色の分類</h4>
  <%= f.radio_button :color, "黒・灰色系" %>
  <%= f.label :黒・灰色系 %>
  <%= f.radio_button :color, "青・水色系" %>
  <%= f.label :青・水色系 %>
  <%= f.radio_button :color, "緑系" %>
  <%= f.label :緑系 %>
  <%= f.radio_button :color, "黄・オレンジ系" %>
  <%= f.label :黄・オレンジ系 %><br>
  <%= f.radio_button :color, "赤・ピンク系" %>
  <%= f.label :赤・ピンク系 %>
  <%= f.radio_button :color, "紫系" %>
  <%= f.label :紫系 %>
  <%= f.radio_button :color, "茶色系" %>
  <%= f.label :茶色系 %>
  <%= f.radio_button :color, "その他" %>
  <%= f.label :その他 %>

  <h4 class="ink_form_item">メモ・紹介</h4>
  <%= f.text_area :ink_introduction %>

  <h4 class="ink_form_item">値段</h4>
  <%= f.text_field :price %>

  <h4 class="ink_form_item">内容量</h4>
  <%= f.text_field :milliliter %>

  <h4 class="ink_form_item">評価</h4>
  <div id="evaluate_stars" data-score="<%= ink.evaluation %>"></div>
  <script>
    $('#evaluate_stars').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: 'ink[evaluation]', //登録するモデル名とカラム名を記述
      half: true,
    });
  </script>
        
  <%= f.submit '登録する' %>
<% end %>