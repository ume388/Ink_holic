<div>
  <div>
    <h1>Inks</h1>

    <%= search_form_for @q do |f| %>
      <%= f.label :ink_name %>
      <%= f.search_field :ink_name_cont %>

      <%= f.submit %>
    <% end %>

    <h3>検索結果</h3>
    <% @searched_inks.each do |ink| %>
      <%= attachment_image_tag ink, :ink_image, :fill, 50, 50 %>
      <%= link_to ink.ink_name, ink_path(ink) %>
    <% end %>
    <hr>

    <% @inks.each do |ink| %>
    <div>
      <%= link_to ink_path(ink) do %>
        <%= attachment_image_tag ink, :ink_image, :fill, 50, 50 %>
      <% end %>
      <p>
        インク名:
        <%= ink.ink_name %>
      </p>
      <p>
        色の分類:
        <%= ink.color %>
      </p>
      <p>
        ユーザー名:
        <%= ink.user.user_name %>
      </p>
    </div>
    <% end %>
  </div>
</div>