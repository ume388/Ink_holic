<div>
  <div>
    <h1><%= @user.user_name %>さんの詳細</h1>
    
    <table>
      <tbody>
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.user_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <% if @user.is_deleted == false %>
              有効
            <% else %>
              退会済み
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    
    <table>
      <thead>
        <tr>
          <th>インク画像</th>
          <th>インク名</th>
          <th>投稿日</th>
        </tr>
      </thead>
      
      <tbody>
        <% @inks.each do |ink| %>
          <tr>
            <td>
              <%= link_to admins_ink_path(ink) do %>
                <%= attachment_image_tag ink, :ink_image, :fill, 30, 30 %>
              <% end %>
            </td>
            <td>
              <%= ink.ink_name %>
            </td>
            <td>
              <%= ink.created_at.strftime('%Y/%m/%d/%R') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>