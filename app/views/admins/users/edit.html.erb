<div class="container">
  <div class="d-flex justify-content-center">
    <div class="admin_edit_user_box">
      <h1><%= @user.user_name %>さんを編集する</h1>
      <%= form_with model:@user, url: admins_user_path do |f| %>
        <h4 class="admin_edit_user_item">プロフィール画像</h4>
        <%= f.attachment_field :user_image %>
      
        <h4 class="admin_edit_user_item">ユーザー名</h4>
        <%= f.text_field :user_name %>
      
        <h4 class="admin_edit_user_item">メールアドレス</h4>
        <%= f.text_field :email %>
        
        <h4 class="admin_edit_user_item">退会ステータス</h4>
        <%= f.select :is_deleted, [["有効", "false"], ["退会", "true"]] %>
      
        <div class="admin_edit_user_item">
          <%= f.submit "編集内容を保存", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>